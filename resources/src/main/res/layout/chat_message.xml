<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/default_padding"
    android:paddingRight="@dimen/default_padding"
    android:paddingTop="@dimen/top_bottom_padding"
    android:paddingBottom="@dimen/top_bottom_padding"
    android:background="@android:drawable/menuitem_background"
    android:longClickable="true">
    
   <ImageView android:id="@+id/status"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/dummy_icon"/>
   	 <TextView android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/status"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:text="12:34:45"/>
    <TextView android:id="@+id/sender"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/time"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:text="name"/>
    <TextView android:id="@+id/message"
        android:bufferType="editable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/sender"
        android:textColor="#ffff"
        android:textSize="18sp"
        android:text="lorem ipsum"
        android:autoLink="all"/>
	<CheckBox android:id="@+id/checkbox"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
		android:visibility="gone"
		android:paddingRight="@dimen/default_padding"/>
	<LinearLayout android:id="@+id/attachments" 
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:layout_below="@id/message"/>
</RelativeLayout>
