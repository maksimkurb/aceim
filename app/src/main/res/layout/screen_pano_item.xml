<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aceim="http://schemas.android.com/apk/res-auto"
   	android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="1dp" >

    <ru.cubly.aceim.app.themeable.widgets.StyleableFrameLayout
        android:id="@+id/indicator"
        aceim:styleableBackground="top_bar_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bottom_bar_height" 
        android:layout_alignParentTop="true"
       	android:layout_centerHorizontal="true"
       	android:paddingTop="@dimen/top_bottom_padding"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/indicator"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:tag="@android:string/untitled" />

</RelativeLayout>