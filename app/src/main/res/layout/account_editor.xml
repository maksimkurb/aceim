<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <Spinner android:id="@+id/protocols"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="15dip"
        android:layout_marginRight="15dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        />    
	<ru.cubly.aceim.client.widgets.bottombar.BottomBar
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
    	android:layout_height="@dimen/top_bottom_bar_height"
    	android:layout_alignParentLeft="true"
    	android:layout_alignParentRight="true"
    	android:layout_alignParentBottom="true">
	    <ru.cubly.aceim.client.widgets.bottombar.BottomBarButton
	        android:id="@+id/cancel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@android:drawable/ic_menu_close_clear_cancel"/>
	    <ru.cubly.aceim.client.widgets.bottombar.BottomBarButton
	        android:id="@+id/save"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@android:drawable/ic_menu_save"/>
	</ru.cubly.aceim.client.widgets.bottombar.BottomBar>
	
	<ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/protocols"
        android:layout_above="@id/bottom_bar">
        <LinearLayout android:id="@+id/container" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:orientation="vertical"   
            android:padding="15dip"        
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/pick_protocol_to_proceed"
                android:layout_margin="20dip"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
