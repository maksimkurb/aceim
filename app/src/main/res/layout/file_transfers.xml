<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <ru.cubly.aceim.client.widgets.bottombar.BottomBar
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
    	android:layout_height="@dimen/top_bottom_bar_height"
    	android:layout_alignParentLeft="true"
    	android:layout_alignParentRight="true"
    	android:layout_alignParentBottom="true">
    	<ru.cubly.aceim.client.widgets.bottombar.BottomBarButton
            android:id="@+id/close"
            android:layout_width="wrap_content"
    		android:layout_height="match_parent"
    		android:src="@android:drawable/ic_menu_close_clear_cancel"
    	/>
        <ru.cubly.aceim.client.widgets.bottombar.BottomBarButton
            android:id="@+id/cancel_all"
            android:layout_width="wrap_content"
    		android:layout_height="match_parent"
    		android:src="@drawable/ic_menu_clear_playlist"
    	/>
    </ru.cubly.aceim.client.widgets.bottombar.BottomBar>
   	<ListView android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/bottom_bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
